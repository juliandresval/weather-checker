{% extends 'base.html.twig' %}

{% block title %}Hello WeathercheckerController!{% endblock %}

{% block body %}
<div class="row">
    <div class="col-12">
        <div class="d-flex flex-row justify-content-center align-items-center" style="height: 100px">
            <h2>Top Cities</h2>
        </div>
    </div>
</div>
<div class="row">
    {% for city in top_cities %}
        <div class="col-lg-4">
            <div class="card">
                <h5 class="card-header">{{ city.name }}, {{ city.country }}</h5>
                <div class="card-body">
                    <iframe id="{{ city.externalId }}" width="100%" height="300" frameborder="0" style="border:0; width: 100%" src="{{ city.src }}" ></iframe>
                    <p class="card-text weather-card" id="{{city.externalId}}" data-id="{{ city.externalId }}" data-lon="{{ city.lon }}" data-lat="{{ city.lat }}">Temp.: <span id="temp"></span>ÂºC / Humidity: <span id="humidity"></span>%</p>
                    <a href="/check-weather/{{ city.externalId }}" class="btn btn-primary">See more...</a>
                </div>
            </div><br>
        </div>
    {% endfor %}
</div>
{% endblock %}
